<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Fav Foods</title>
    <link rel="stylesheet" href="/css/master.css">
  </head>
  <body>
    <!-- Can tack on a query string -->
    <!-- Both go to the same route, just dif query strings -->
    <a href="/animals?animal=crocodile">Crocodile Link</a>
    <a href="/animals?animal=bunny">Bunny Link</a>
    <h2>{{animal}}</h2>



    <h1>My Favorite Foods</h1>
    <!-- Iterate through each food item -->
    <!-- Each item is called food -->
    {{#each foods}}
      {{> card}}
    {{/each}}
    <h2>Animals</h2>
    {{#each animals as |animal|}}
      <p>{{cap animal}}</p>
    {{/each}}

    <!-- Have access to person's properties -->
    {{#with person as |p|}}
      <p>{{p.name}}</p>
      <p>{{p.school}}</p>
    {{/with}}

